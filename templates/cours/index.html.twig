{% extends 'base.html.twig.html' %}

{% block title %} Nos cours - Ecoit{% endblock %}
{% block content %}

    <div class="row">
        <div class="col-md-3">
            <h3>filtrer</h3>
            {{ form(form) }}
        </div>
        <div class="col-md-9">
            <h3>Nos cours</h3>
            <div class="row" style="margin-bottom: 100px">
                {% for cour in cours %}
                    <div class="col-md-4">
                        <div class="cour-item text-center" >
                            <a href="{{ path('app_cour', {'slug' :cour.slug }) }}"><img src="/uploads/{{ cour.illustration }} " alt="{{ cour.nom }}" class="img-fluid"></a>
                            <h5>{{ cour.nom }}</h5>
                            <span>{{ cour.subtitle }}</span>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}
